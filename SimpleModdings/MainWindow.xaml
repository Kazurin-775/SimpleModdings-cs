<Window x:Class="SimpleModdings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleModdings"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="简单补丁" Height="500" Width="400" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="HeaderedContentControl">
            <Setter Property="IsTabStop" Value="False" />
        </Style>
    </Window.Resources>

    <DockPanel Margin="12">
        <ui:SimpleStackPanel DockPanel.Dock="Top" Spacing="6">
            <ui:AutoSuggestBox
                x:Name="PatchesBox"
                QueryIcon="Find"
                PlaceholderText="选择补丁……"
                TextChanged="OnPatchSearchChanged" />

            <HeaderedContentControl Header="程序目录">
                <ui:AutoSuggestBox QueryIcon="Folder" />
            </HeaderedContentControl>

            <ui:ToggleSwitch HorizontalAlignment="Stretch">测试模式</ui:ToggleSwitch>

            <Button HorizontalAlignment="Stretch" Content="执行" />
        </ui:SimpleStackPanel>

        <TextBox Margin="0,6,0,0" IsReadOnly="True" />
    </DockPanel>
</Window>
